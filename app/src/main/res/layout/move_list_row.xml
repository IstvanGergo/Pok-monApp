<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/moveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pound"
        />
    <TextView
        android:id="@+id/accuracyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moveName"
        android:text="Accuracy: "
        />
    <TextView
        android:id="@+id/accuracyValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/accuracyLabel"
        app:layout_constraintTop_toBottomOf="@id/moveName"
        tools:text="100"
        />
    <TextView
        android:id="@+id/powerLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accuracyLabel"
        android:text="Power: "
        />
    <TextView
        android:id="@+id/powerValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/powerLabel"
        app:layout_constraintTop_toBottomOf="@id/accuracyValue"
        tools:text="40"
        />
    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="240sp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/accuracyLabel"
        app:layout_constraintTop_toBottomOf="@id/moveName"
        android:text="Type: "
        />
    <TextView
        android:id="@+id/typeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/typeLabel"
        app:layout_constraintTop_toBottomOf="@id/moveName"
        tools:text="Normal"
        />

    <TextView
        android:id="@+id/ppLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="240sp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/powerLabel"
        app:layout_constraintTop_toBottomOf="@id/typeLabel"
        android:text="PP: "
        />
    <TextView
        android:id="@+id/ppValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ppLabel"
        app:layout_constraintTop_toBottomOf="@id/typeValue"
        tools:text="35"
        />
    <!--
    <ListView
        android:id="@+id/canBeLearntBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ppLabel"
        app:layout_constraintStart_toStartOf="parent"
        />
    -->
</androidx.constraintlayout.widget.ConstraintLayout>