<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/pokemonSprite"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:src="@drawable/bulbasaur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/pokemonSprite"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        tools:text="Bulbasaur" />
    <TextView
        android:id="@+id/healthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/pokemonName"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/health" />
    <TextView
        android:id="@+id/healthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/pokemonName"
        app:layout_constraintStart_toEndOf="@id/healthLabel"
        tools:text="45" />
    <TextView
        android:id="@+id/attackLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/healthLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/attack" />
    <TextView
        android:id="@+id/attackValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/healthValue"
        app:layout_constraintStart_toEndOf="@id/attackLabel"
        tools:text="49" />
    <TextView
        android:id="@+id/defenseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/attackLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/defense" />
    <TextView
        android:id="@+id/defenseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/attackValue"
        app:layout_constraintStart_toEndOf="@id/defenseLabel"
        tools:text="49" />
    <TextView
        android:id="@+id/heightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/defenseLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/height" />
    <TextView
        android:id="@+id/heightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintStart_toEndOf="@id/heightLabel"
        app:layout_constraintTop_toBottomOf="@+id/defenseValue"
        tools:text="7" />
    <TextView
        android:id="@+id/spAttackLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120sp"
        app:layout_constraintTop_toBottomOf="@+id/pokemonName"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/special_attack" />
    <TextView
        android:id="@+id/spAttackValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/pokemonName"
        app:layout_constraintStart_toEndOf="@id/spAttackLabel"
        tools:text="65" />
    <TextView
        android:id="@+id/spDefenseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120sp"
        app:layout_constraintTop_toBottomOf="@+id/spAttackLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/special_defense" />
    <TextView
        android:id="@+id/spDefenseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/spAttackValue"
        app:layout_constraintStart_toEndOf="@id/spDefenseLabel"
        tools:text="65" />
    <TextView
        android:id="@+id/speedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120sp"
        app:layout_constraintTop_toTopOf="@+id/defenseLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/speed" />
    <TextView
        android:id="@+id/speedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/spDefenseValue"
        app:layout_constraintStart_toEndOf="@id/speedLabel"
        tools:text="45" />
    <TextView
        android:id="@+id/weightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120sp"
        app:layout_constraintTop_toBottomOf="@+id/speedLabel"
        app:layout_constraintStart_toEndOf="@id/pokemonSprite"
        android:text="@string/weight" />
    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        app:layout_constraintTop_toBottomOf="@+id/speedValue"
        app:layout_constraintStart_toEndOf="@id/weightLabel"
        tools:text="69" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemonMovesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/heightLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>